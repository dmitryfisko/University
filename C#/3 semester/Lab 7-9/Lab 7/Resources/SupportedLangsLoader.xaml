<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:resources="clr-namespace:Lab_7.Resources">

    <!-- Resources ODP contains the current instance of the WPFLocalize.Properties.Resources class.
       Used in bindings to get localized strings and automatic updates when the culture is updated -->
    <ObjectDataProvider x:Key="Strings" ObjectType="{x:Type resources:CultureResources}" MethodName="GetResourceInstance"/>

    <!-- CultureResources ODP provides access to list of currently available cultures -->
    <ObjectDataProvider x:Key="CultureResourcesDs" ObjectType="{x:Type resources:CultureResources}"/>
</ResourceDictionary>